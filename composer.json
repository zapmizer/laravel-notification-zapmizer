{
    "name": "leettech/laravel-notification-zapmizer",
    "description": "A Laravel package to send notifications using Zapmizer API",
    "homepage": "https://github.com/leettech/laravel-notification-zapmizer",
    "license": "MIT",
    "authors": [
        {
            "name": "Zapmizer",
            "email": "support@zapmizer.com",
            "homepage": "https://github.com/leettech/laravel-notification-zapmizer",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.8",
        "illuminate/notifications": "~10.0 || ~11.0",
        "illuminate/support": "~10.0 || ~11.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Notification\\Zapmizer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Notification\\Zapmizer\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-text --coverage-clover=coverage.clover"
    },
    "config": {
        "sort-packages": true
    }
}